<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cubefaster">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DeleteTimes"
            android:label="Delete Times"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticPage"
            android:label="Statistic Page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Single3x3"
            android:label="3x3 Single"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ResultPage"
            android:label="Result Page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>